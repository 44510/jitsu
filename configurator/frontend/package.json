{
  "workspaces": [
    "catalog",
    "main"
  ],
  "name": "root",
  "private": true,
  "scripts": {
    "turbo": "turbo",
    "dev": "turbo run compile --filter=./catalog && turbo run dev --continue --parallel",
    "build": "turbo run build",
    "factory-reset": "rm -rf `find . -type d -name node_modules`",
    "format:check": "prettier --check --config ./.prettierrc.json --ignore-path ./.prettierignore ./ || (echo \"ðŸ‘‰ Run pnpm format:fix!\" && exit 1)",
    "format:fix": "prettier --write --config ./.prettierrc.json --ignore-path ./.prettierignore ./",
    "lint": "eslint . --ext .txcd ,.tsx --ignore-pattern **/node_modules/",
    "lint:fix": "eslint . --ext .tx,.tsx --ignore-pattern **/node_modules/ --fix"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jitsucom/jitsu.git"
  },
  "bugs": {
    "url": "https://github.com/jitsucom/jitsu/issues"
  },
  "packageManager": "pnpm",
  "engines": {
    "pnpm": ">=3",
    "node": ">=14"
  },
  "devDependencies": {
    "ts-jest": "^27.0.3",
    "@types/jest": "^26.0.24",
    "@types/node": "^12.0.0",
    "typescript": "4.7.4",
    "@types/react": "^17.0.0",
    "prettier": "^2.5.1",
    "turbo": "^1.2.11"
  }
}
